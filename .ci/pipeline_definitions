  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess: 'inject-commit-hash'
        inject_effective_version: true
      component_descriptor:
        upload: no-upload
        depends:
        - publish
        - prepare
      publish:
        dockerimages:
          landscaper-controller:
            registry: 'laas-component-descriptor-pipeline'
