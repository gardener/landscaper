    steps:
      verify:
        image: 'golang:1.16'
      publish-helm-charts:
        depends:
        - verify

  jobs:
    head-update:
      traits:
        draft_release: ~
      steps:
        integration-test:
          execute:
          - integration-test
          depends:
          - publish
          image: 'eu.gcr.io/gardener-project/gardener/testmachinery/testmachinery-run:stable'
    pull-request:
      traits:
        pull-request: ~
        draft_release: ~
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
          release_callback: '.ci/release'
          next_version_callback: '.ci/next_version'
          git_tags:
          - ref_template: 'refs/tags/{VERSION}'
          - ref_template: 'refs/tags/apis/{VERSION}'
      steps:
        integration-test:
          execute:
          - integration-test
          depends:
          - publish
          image: 'eu.gcr.io/gardener-project/gardener/testmachinery/testmachinery-run:stable'
