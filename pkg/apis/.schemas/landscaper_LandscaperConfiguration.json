{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$ref": "#/definitions/LandscaperConfiguration",
  "definitions": {
    "LandscaperConfiguration": {
      "required": [
        "registries"
      ],
      "properties": {
        "kind": {
          "type": "string"
        },
        "apiVersion": {
          "type": "string"
        },
        "repositoryContext": {
          "$schema": "http://json-schema.org/draft-04/schema#",
          "$ref": "#/definitions/RepositoryContext"
        },
        "defaultOCI": {
          "$schema": "http://json-schema.org/draft-04/schema#",
          "$ref": "#/definitions/OCIConfiguration"
        },
        "registries": {
          "$schema": "http://json-schema.org/draft-04/schema#",
          "$ref": "#/definitions/RegistryConfiguration"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "LocalRegistryConfiguration": {
      "required": [
        "rootPath"
      ],
      "properties": {
        "rootPath": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "OCICacheConfiguration": {
      "required": [
        "path"
      ],
      "properties": {
        "useInMemoryOverlay": {
          "type": "boolean"
        },
        "path": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "OCIConfiguration": {
      "required": [
        "allowPlainHttp"
      ],
      "properties": {
        "configFiles": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "cache": {
          "$schema": "http://json-schema.org/draft-04/schema#",
          "$ref": "#/definitions/OCICacheConfiguration"
        },
        "allowPlainHttp": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "RegistryConfiguration": {
      "properties": {
        "local": {
          "$schema": "http://json-schema.org/draft-04/schema#",
          "$ref": "#/definitions/LocalRegistryConfiguration"
        },
        "oci": {
          "$ref": "#/definitions/OCIConfiguration"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "RepositoryContext": {
      "required": [
        "type",
        "baseUrl"
      ],
      "properties": {
        "type": {
          "type": "string"
        },
        "baseUrl": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    }
  }
}