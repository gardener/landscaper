{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$ref": "#/definitions/InstallationTemplate",
  "definitions": {
    "DataExport": {
      "required": [
        "name",
        "dataRef"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "dataRef": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "DataImport": {
      "required": [
        "name",
        "dataRef"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "dataRef": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "InstallationExports": {
      "properties": {
        "data": {
          "items": {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "$ref": "#/definitions/DataExport"
          },
          "type": "array"
        },
        "targets": {
          "items": {
            "$ref": "#/definitions/TargetImportExport"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "InstallationImports": {
      "properties": {
        "data": {
          "items": {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "$ref": "#/definitions/DataImport"
          },
          "type": "array"
        },
        "targets": {
          "items": {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "$ref": "#/definitions/TargetImportExport"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "InstallationTemplate": {
      "required": [
        "name",
        "blueprint"
      ],
      "properties": {
        "kind": {
          "type": "string"
        },
        "apiVersion": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "blueprint": {
          "$schema": "http://json-schema.org/draft-04/schema#",
          "$ref": "#/definitions/InstallationTemplateBlueprintDefinition"
        },
        "imports": {
          "$schema": "http://json-schema.org/draft-04/schema#",
          "$ref": "#/definitions/InstallationImports"
        },
        "importDataMappings": {
          "patternProperties": {
            ".*": {
              "items": {
                "type": "integer"
              },
              "type": "array"
            }
          },
          "type": "object"
        },
        "exports": {
          "$schema": "http://json-schema.org/draft-04/schema#",
          "$ref": "#/definitions/InstallationExports"
        },
        "exportDataMappings": {
          "patternProperties": {
            ".*": {
              "items": {
                "type": "integer"
              },
              "type": "array"
            }
          },
          "type": "object"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "InstallationTemplateBlueprintDefinition": {
      "properties": {
        "ref": {
          "type": "string"
        },
        "filesystem": {
          "items": {
            "type": "integer"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "TargetImportExport": {
      "required": [
        "name",
        "target"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "target": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    }
  }
}